<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainerHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageViewHistory"
        android:layout_width="63dp"
        android:layout_height="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/historyRecyclerItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Охотники за приведениями"
        style="@style/TextAppearance.AppCompat.Title"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewHistory"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/historyRecyclerItemVoteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Рейтинг 8.0"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/historyRecyclerItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/historyRecyclerItemTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/historyRecyclerItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Дата запроса 01.09.2021"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="italic"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/historyRecyclerItemVoteAverage"
        app:layout_constraintTop_toBottomOf="@+id/historyRecyclerItemVoteAverage" />

</androidx.constraintlayout.widget.ConstraintLayout>